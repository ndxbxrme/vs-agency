.contact-details
  .card
    min-height 110px
    background #eee
    padding 1rem 
    position relative
    border-radius 1rem
    box-shadow 1px 1px 0px #ccc
    .edit-btn, .controls
      position absolute
      top 0
      right 0
      padding 0.5rem
    .edit-btn
      display none
    .communication
      display flex
      flex-wrap wrap
    .role
      font-size 1.3rem
      padding-left 3.5rem
    .name, .telephone, .email
      font-size 1.7rem
      position relative
      padding-left 3.5rem
      margin-right 1rem
      &:before
        position absolute
        top -1px
        left 0px
        width 25px
        height 25px
        content ''
        background url('/public/img/icons/cathead.png')
        background-size cover
    input
      font-size 1.3rem!important
    &:hover
      .edit-btn
        display block
.mobile
  .contact-details
    .card
      .edit-btn
        display block