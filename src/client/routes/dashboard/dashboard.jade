.dashboard(ng-show='getUser()')
  h1 dashboard
  .overview
    .heading Overview of Live Cases
    table.table.table-responsive
      thead
        tr
          th.status(width='33%') Status
          th.position Sale Position
      tbody
        tr
          th.status Pre Survey
          td.position 24
      tbody.blank
        tr
          td(colspan='2') &nbsp;
      tbody.total
        tr
          th.status Total
          td.position 62
  .income
    .heading &pound; Income
    table.table.table-responsive
      thead
        tr
          th.month(width='33%') Month
          th.due Exchanges due
          th.completions Completions
      tbody
        tr
          th.month March
          td.due 13
          td.completions 13
      tbody.blank
        tr
          td(colspan='3') &nbsp;
      tbody.total
        tr
          th.month.total Total
          td.due.total 62
          td.completions.total