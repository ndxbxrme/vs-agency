@import '../../variables'
.case
  .address
    font-size 1.8rem
    font-weight 100
  .contacts
    display flex
    flex-wrap wrap
    justify-content space-between
  button
      display inline-block
      white-space nowrap
      padding 1rem
      border 1px solid #ccc
      border-radius 0.5rem
      color vs-orange
      background white
      transition all 0.4s ease-in-out
      &:hover
        background vs-orange
        color white